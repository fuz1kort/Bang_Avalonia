<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Bang_Game.ViewModels"
        x:DataType="viewModels:GameWindowViewModel"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        x:Class="Bang_Game.Views.GameWindow"
        Icon="/Assets/bang-logo.ico"
        Title="Bang">
    
    <Design.DataContext>
        <viewModels:GameWindowViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="1*,1*" Background="White">
        <Grid x:Name="PlayersListGrid" HorizontalAlignment="Left" Background="Gray">
            <ListBox ItemsSource="{Binding PlayersList}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Background="{Binding Color}" Text="{Binding Name}"></TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Window>