<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Bang_Game.ViewModels"
        x:DataType="viewModels:GameWindowViewModel"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Bang_Game.Views.GameWindow"
        Icon="/Assets/bang-logo.ico"
        Title="Bang">

    <Design.DataContext>
        <viewModels:GameWindowViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="1*,8*">
        <Grid Grid.Column="0" Background="Gray">
            <StackPanel Spacing="5"
                        Margin="5"
                        HorizontalAlignment="Left">
                <ListBox ItemsSource="{Binding PlayersList}" x:Name="PlayersListBox">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Background="{Binding Color}" HorizontalAlignment="Center"></TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Grid>
    </Grid>

</Window>